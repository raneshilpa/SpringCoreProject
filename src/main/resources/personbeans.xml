<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<bean name="Cer" class="co.spring.homepractice.ConInject.Certificate">
    <constructor-arg value="JAVA CERTIFICATE" />

</bean>

    <bean name="person" class="co.spring.homepractice.ConInject.Person">
             <constructor-arg value="Shilpa" />
              <constructor-arg value="12" type="int"/>
              <constructor-arg ref="Cer" />
              <constructor-arg >
              <list>
                  <value>java</value>
                  <value>Selenium</value>
                  <value>Scala</value>
                  <value>C</value>
                  <value>c++</value>
              </list>
    </constructor-arg>



    </bean>

</beans>
